using namespace std;
#define fname ""
#define F first
#define S second
#define pb push_back
#define mp make_pair
#define ll long long
#define ull unsigned long long
#define inf 1000000000
#define INF 1000000000000000000ll
void solve() {
	int n, m;
	scanf("%d%d", &n, &m);
	if (!((n * 1ll * m) & 1)) puts("Yes");
	else puts("No");
}

int main() {
	#ifndef ONLINE_JUDGE
    freopen(fname"in", "r", stdin);
    freopen(fname"out", "w", stdout);
	#endif

	int test;
	scanf("%d", &test);

	while (test--) solve();
    return 0;
}
