#include <bits/stdc++.h>

using namespace std;

int main() {
  // freopen("in", "r", stdin); freopen("out", "w", stdout);
  int tt;
  scanf("%d", &tt);
  while (tt--) {
    int n;
    scanf("%d", &n);
    long long mn = 1e9;
    for (int i = 0; i < n; ++i) {
      int foo;
      scanf("%d", &foo);
      if (foo < mn) {
        mn = foo;
      }
    }
    printf("%lld\n", mn * (n - 1));
  }
  return 0;
}