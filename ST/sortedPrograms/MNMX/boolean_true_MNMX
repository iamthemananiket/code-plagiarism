#include<bits/stdc++.h>
using namespace std;
typedef long long int ll;
ll arr[100009];
int main()
{
    int test;
    scanf("%d",&test);
    while(test--)
    {
        int n,m,ans=0;
        scanf("%d",&n);
        for(int i=0;i<n;i++)
            scanf("%lld",&arr[i]);
        sort(arr,arr+n);
        printf("%lld\n",arr[0]*(n-1));
    }
    return 0;
}
