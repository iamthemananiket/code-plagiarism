#include <bits/stdc++.h>

using namespace std;

namespace stuff {
typedef long long ll;
const int MOD = 1000000007;

void solve(int test_num) {
  int N, K;
  cin >> N >> K;
  vector<int> take(N), prof(N);
  for (int i = 0; i < N; i++)
    cin >> take[i];
  for (int i = 0; i < N; i++)
    cin >> prof[i];
  ll res = 0;
  for (int i = 0; i < N; i++)
    res = max(res, ll(K) / take[i] * prof[i]);
  cout << res << endl;
}

void solve() {
#ifdef AZN
  freopen("input.txt", "r", stdin);
  freopen("output.txt", "w", stdout);
//freopen("azn.txt", "w", stderr);
  double start_t = clock();
#endif
  ios::sync_with_stdio(false);
  cin.tie(NULL);
  int T = 1;
  cin >> T;
  for (int t = 1; t <= T; t++)
    solve(t);
#ifdef AZN
  cerr << "Took: " << ((clock() - start_t) / CLOCKS_PER_SEC);
#endif
}
}

int main() {
  stuff::solve();
  return 0;
}
