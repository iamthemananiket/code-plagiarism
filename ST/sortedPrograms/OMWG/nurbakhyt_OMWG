const int MAX_N = (int)1e5 + 123;
const double eps = 1e-6;
const int mod = (int)1e9 + 7;

using namespace std;

int n, m;

void solve() {
    cin >> n >> m;
    int ans = (n - 1) * m + n * (m - 1);
    cout << ans << endl;
}


int main() {
    #ifdef Nick
    freopen(fname"in","r",stdin);
	#endif
    int t;
    cin >> t;
    while(t--)
        solve();
    return 0;
}
