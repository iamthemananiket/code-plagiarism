using namespace std;

const int INF = 1e9;
const int N = 100031;

int tests;
long long n, b, m, ans;
long long can_do;

int main(){
	//freopen("fabro.in","r",stdin);
	//freopen("fabro.out","w",stdout);
	//freopen("F:/input.txt", "r", stdin);
	//freopen("F:/output.txt", "w", stdout);
	ios_base::sync_with_stdio(0);
	//cin.tie(0);

	cin >> tests;
	for (; tests; --tests)
	{
		cin >> n >> b >> m;
		ans = 0;
		while (true)
		{
			can_do = n / 2 + n % 2;
			ans += can_do*m;
			n -= can_do;
			if (n == 0)
				break;
			ans += b;
			m *= 2;
		}
		cout << ans << endl;
	}
	cin.get(); cin.get();
	return 0;
}