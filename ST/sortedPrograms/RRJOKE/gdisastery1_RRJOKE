int main(){
  int N, T;
  scanf("%d", &T);
  while(T--){
    scanf("%d", &N);
    int res = 0;
    for(int i = 1; i <= N; i++){
      res ^= i;
      scanf("%*d %*d");
    }
    printf("%d\n", res);
  }
  return 0;
}
