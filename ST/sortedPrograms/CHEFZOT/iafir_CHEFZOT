#include <iostream>
#include <cstdio>
#include <algorithm>
#include <cstring>
#include <vector>
#include <utility>

using namespace std;

int n,ans,x,a;


int main()
{
//	freopen("in.txt","r",stdin);
//	freopen("out.txt","w",stdout);
	scanf("%d",&n);
	a = ans = 0;
	while(n--)
	{
		scanf("%d",&x);
		if(x)
			a++;
		else
			a = 0;
		ans = max(ans,a);
	}
	printf("%d\n",ans);
	return 0;
}
