#include<bits/stdc++.h>

using namespace std;

#define ff first
#define ss second
#define pb push_back
#define mp make_pair
#define all(x) x.begin(),x.end()
#define sz(x) ((int)x.size())

const int MOD = 1e9+7;

typedef long long ll;
typedef pair<int,int> pii;
int main() {
//	freopen("TASK.in","r",stdin);freopen("TASK.out","w",stdout);
	int t;
	cin>>t;
	while(t--) {
		ll x;
		scanf("%lld",&x);
		if(x==0) printf("%d\n",3);
		else if(x==1) printf("%d\n",1);
		else if(x%4==0) printf("%lld\n",x);
		else if((x+1)%4LL==0) printf("%lld\n",x-1);
		else printf("-1\n");
	}
	return 0;
}
