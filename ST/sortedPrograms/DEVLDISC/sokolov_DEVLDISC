int main() {
	//freopen("in.txt", "rt", stdin);
	//freopen("out.txt", "wt", stdout);
	int t;
	scanf("%d", &t);
	while (t--) {
		int n;
		scanf("%d", &n);
		if (n <= 6) {
			printf("-1\n");
			continue;
		}
		printf("%d\n", 8 + n - 7);
		printf("1 2\n");
		printf("1 5\n");
		printf("2 3\n");
		printf("2 7\n");
		printf("3 4\n");
		printf("3 5\n");
		printf("4 7\n");
		printf("5 6\n");
		for (int i = 8; i <= n; ++i) {
			printf("%d 5\n", i);
		}
		printf("1\n");
	}
	return 0;
}