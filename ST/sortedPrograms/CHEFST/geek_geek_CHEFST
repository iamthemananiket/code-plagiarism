using namespace std;
vector<lli> val;
int prog()
{
    lli n1,n2,m,M,x;
    gi(n1);gi(n2);gi(m);
    M=(m*(m+1));
    M>>=1;
    x = min(n1,n2);
    if(x>=M)
        printf("%lld\n",n1+n2-M-M);
    else
        printf("%lld\n",n1+n2-x-x);
    r0;
}
int main()
{
    //f_in;
    lli t;
    gi(t);
    while(t--)
    prog();
    r0;
}
