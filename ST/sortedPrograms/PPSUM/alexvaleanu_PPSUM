#include <bits/stdc++.h>

using namespace std;

int sum(int n)
{
    return n * (n + 1) / 2;
}

int main()
{
    #ifndef ONLINE_JUDGE
        ifstream cin("data.in");
    #endif // ONLINE_JUDGE

    ios_base::sync_with_stdio(false);

    int T, D, N;
    cin >> T;

    while (T--)
    {
        cin >> D >> N;

        while (D--)
        {
            N = sum(N);
        }

        cout << N << "\n";
    }

    return 0;
}
