using namespace std;

const int maxn = 111;

char s[maxn];

int main()
{
	#ifndef ONLINE_JUDGE
	freopen (fname".in", "r", stdin);
	freopen (fname".out", "w", stdout);
	#endif
	int T;
	cin >> T;
	while (T--)
	{
		scanf("\n");
		gets(s);
		int ans = 0;
		int n = (int)strlen(s);
		for (int i = 0; i < n; i++)
			if (s[i] == '4')
				ans++;
		printf("%d\n", ans);
	}
	return 0;
}
