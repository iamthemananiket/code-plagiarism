#include<bits/stdc++.h>
#define N 2000009
using namespace std;
typedef long long int ll;
ll arr[N];
int main()
{
    int test;
    cin>>test;
    while(test--)
    {
        int n,m,k;
        cin>>n>>m>>k;
        if(n<m)
            swap(n,m);
        if(k<=n-m)
        {
            cout<<n-m-k<<endl;
            continue;
        }
        cout<<0<<endl;
    }
    return 0;
}
