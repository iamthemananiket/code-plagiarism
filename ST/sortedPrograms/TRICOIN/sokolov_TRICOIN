int main() {
	//freopen("in.txt", "rt", stdin);
	//freopen("out.txt", "wt", stdout);
	int t;
	scanf("%d", &t);
	while (t--) {
		int n;
		scanf("%d", &n);
		int res = 0;
		while (n >= (res + 1)) {
			++res;
			n -= res;
		}
		printf("%d\n", res);
	}
	return 0;
}