using namespace std;

namespace ALEXNUMB {

void solve(int test_num) {
  int n;
  scanf("%d", &n);
  for (int i = 0, x; i < n; i++)
    scanf("%d", &x);
  printf("%lld\n", n * (n - 1LL) / 2);
}

void solve() {
#ifdef AZN
  freopen("input.txt", "r", stdin);
  freopen("output.txt", "w", stdout);
  freopen("azn.txt", "w", stderr);
#endif
  int tests;
  scanf("%d", &tests);
  for (int i = 1; i <= tests; i++)
    solve(i);
}
}

int main() {
  ALEXNUMB::solve();
  return 0;
}
