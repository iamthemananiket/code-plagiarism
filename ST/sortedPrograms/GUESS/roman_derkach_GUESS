#include<bits/stdc++.h>
#define mp make_pair
#define f first
#define s second
#define ll long long
 using namespace std;


  int main()
  {

    ios_base::sync_with_stdio(false);cin.tie(NULL);cout.tie(NULL);
    //freopen("input.txt","r",stdin); freopen("output.txt","w",stdout);
     int t;
     cin>>t;
      while(t--)
      {
          ll n,m;
          cin>>n>>m;
           ll ch = (n+1)/2 * (m/2) + (n/2) * ((m+1)/2),
           zn = n * m;
           ll ncd = __gcd(ch,zn);
            cout<<ch/ncd<<'/'<<zn/ncd<<endl;
      }

    return 0;
  }
